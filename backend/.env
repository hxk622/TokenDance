# Environment
ENVIRONMENT=development
DEBUG=true

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=tokendance
POSTGRES_PASSWORD=
POSTGRES_DB=tokendance

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# FileSystem
DATA_ROOT=/data

# LLM
# SiliconFlow (硅基流动) - 国内优先，价格便宜，免费额度多
# API Key: https://cloud.siliconflow.cn/account/ak
SILICONFLOW_API_KEY=
# Free: Qwen/Qwen2.5-7B-Instruct | Paid: Qwen/Qwen2.5-72B-Instruct, deepseek-ai/DeepSeek-R1
SILICONFLOW_MODEL=Qwen/Qwen2.5-72B-Instruct

# Other LLM providers (backup)
ANTHROPIC_API_KEY=
GEMINI_API_KEY=
DEFAULT_LLM_MODEL=google/gemini-2.0-flash-001
MAX_CONTEXT_TOKENS=128000

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# CORS (uses default: http://localhost:5173,http://localhost:3000)
# BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OpenRouter - 备用/海外
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-2.0-flash-001

# Search APIs
SERPER_API_KEY=
TAVILY_API_KEY=  # https://tavily.com 免费 1000次/月


# Search proxy (ClashX VPN, avoids conflict with Warp terminal's HTTP_PROXY)
SEARCH_HTTP_PROXY=http://127.0.0.1:7890

# Deep Research concurrent tools (default: 15)
MAX_CONCURRENT_TOOLS=15
